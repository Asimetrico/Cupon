{% extends 'frontend.html.twig' %}

{% block title %}Ofertas recientes en {{ ciudad.nombre }}{% endblock %}
{% block id 'recientes' %}

{% block rss %}
    <link rel="alternate" type="application/rss+xml" title="RSS de las ofertas mÃ¡s recientes en {{ ciudad.nombre }}" href="{{ url('ciudad_recientes', { ciudad: ciudad.slug, _format: 'rss' }) }}" />
{% endblock %}

{% block article %}
    <h1>{{ "Ofertas recientes en %ciudad%"|trans({ '%ciudad%': ciudad.nombre }) }}</h1>

    {% for oferta in ofertas %}
        {{ include('oferta/includes/minioferta.html.twig') }}
    {% endfor %}
{% endblock %}

{% block aside %}
    {{ parent() }}

    <section id="cercanas">
        <h2>{{ "Ofertas en otras ciudades"|trans }}</h2>
        <ul>
            {% for ciudad in cercanas %}
                <li><a href="{{ path('ciudad_recientes', { ciudad: ciudad.slug }) }}">{{ ciudad.nombre }}</a></li>
            {% endfor %}
        </ul>
    </section>

    {{ include('includes/_sobre_nosotros.html.twig') }}
{% endblock %}

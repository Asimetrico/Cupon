{% extends 'frontend.html.twig' %}

{% block title 'Cupon, cada día ofertas increíbles en tu ciudad con descuentos de hasta el 90%' %}
{% block id 'portada' %}

{% block anuncio %}
    {% if not is_granted('ROLE_USUARIO') %}
        <div id="anuncio">
            {% trans with { '%portada%': path('portada'), '%registro%': path('usuario_registro') } %}
                <a href="%portada%">CUPON</a> publica cada día una oferta increíble en tu ciudad con descuentos de hasta el 90%% <a class="boton" href="%registro%">Regístrate ya</a>
            {% endtrans %}
        </div>
    {% endif %}
{% endblock %}

{% block article %}
    {{ include('oferta/includes/oferta.html.twig') }}
{% endblock %}

{% block aside %}
    {{ parent() }}
    {{ include('includes/_sobre_nosotros.html.twig') }}
{% endblock %}
